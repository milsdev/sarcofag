{
    "name": "milsdev/wordpress-plugin-sarcofag",
    "description": "Wordpress plugin, brings EventDispatcher, DependencyInjection and MVC to the Wordpress.",
    "type": "wordpress-muplugin",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Mil's",
            "email": "hi@milsdev.com"
        }
    ],
    "require": {
        "composer/installers": "~1.0",
        "php-di/php-di": "5.2.2",
        "slim/slim": "3.4.2",
        "php": "^5.5 || ^7.0",
        "laminas/laminas-validator": "^2.8.1",
        "laminas/laminas-i18n": "^2.7.3",
        "laminas/laminas-i18n-resources": "^2.5.2",
        "laminas/laminas-servicemanager": "^3.1.1",
        "laminas/laminas-inputfilter": "^2.7.2",
        "laminas/laminas-uri": "^2.5.2",
        "laminas/laminas-cache": "^2.7.2"
    },
    "require-dev": {
      "phpunit/phpunit": "~4.0",
      "squizlabs/php_codesniffer": "^2.0",
      "satooshi/php-coveralls": "^1.0",
      "mikey179/vfsstream": "^1.6"
    },
    "suggest": {
        "mobiledetect/mobiledetectlib":
            "For view helper ScreenSizeDetector, to detect if mobile or tablet or pc by PHP"
    },
    "autoload": {
        "psr-4": {
            "Sarcofag\\": "src/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "SarcofagTest\\": "test/",
        "SarcofagBench\\": "benchmarks/"
      }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["bin/sarcofag"],
    "extra": {
        "installer-name": "sarcofag"
    }
}
